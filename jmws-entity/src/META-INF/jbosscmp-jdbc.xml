<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jbosscmp-jdbc PUBLIC 
	"-//JBoss//DTD JBOSSCMP-JDBC 3.2//EN" 
	"file://jbosscmp-jdbc_3_2.dtd">

<jbosscmp-jdbc>
	
	<defaults>
	
		<datasource>java:/PostgresDS</datasource>
		<datasource-mapping>PostgreSQL 7.2</datasource-mapping>
		
		<create-table>true</create-table>
		<remove-table>false</remove-table>
		<read-only>false</read-only>
		<read-time-out>300</read-time-out>	
		<row-locking>false</row-locking>
	</defaults>
	
	<enterprise-beans>
		
		<entity>
			<ejb-name>User</ejb-name>
			<create-table>true</create-table>
			<pk-constraint>true</pk-constraint>
			<table-name>jmws_users</table-name>
			
			<cmp-field>
				<field-name>username</field-name>
				<column-name>username</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>id</field-name>
				<column-name>id</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>userActive</field-name>
				<column-name>active</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>password</field-name>
				<column-name>password</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>registerDate</field-name>
				<column-name>regdate</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>fullName</field-name>
				<column-name>fullname</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>email</field-name>
				<column-name>email</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>homepage</field-name>
				<column-name>homepage</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>biography</field-name>
				<column-name>bio</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>lastVisit</field-name>
				<column-name>last_visit</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>location</field-name>
				<column-name>location</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>occupation</field-name>
				<column-name>occupation</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>icqNumber</field-name>
				<column-name>icq</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>aimAddress</field-name>
				<column-name>aim</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>msnAddress</field-name>
				<column-name>msn</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>yahooAddress</field-name>
				<column-name>yahoo</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>signature</field-name>
				<column-name>sig</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>avatar</field-name>
				<column-name>avatar</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>cookieTimeOut</field-name>
				<column-name>cookie_timeout</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>language</field-name>
				<column-name>lang</column-name>
			</cmp-field>					
		</entity>
		
		
		<entity>
			<ejb-name>PKGenerator</ejb-name>
			<create-table>true</create-table>
			<pk-constraint>true</pk-constraint>
			<table-name>jmws_pkgenerator</table-name>
			
			<cmp-field>
				<field-name>table</field-name>
				<column-name>table_name</column-name>
			</cmp-field>
			<cmp-field>
				<field-name>key</field-name>
				<column-name>key_val</column-name>
			</cmp-field>
			
		</entity>
		
	</enterprise-beans>
	
	

</jbosscmp-jdbc>