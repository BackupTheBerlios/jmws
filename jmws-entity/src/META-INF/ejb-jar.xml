<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC 
	"-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN" 
	"ejb-jar_2_0.dtd">

<ejb-jar>

	<description><![CDATA[No Description.]]></description>
	<display-name>ejb-jar.xml - JMWS entity</display-name>
	
	<enterprise-beans>
		
		<entity>
		
			<display-name>User EntityBean</display-name>
			<ejb-name>User</ejb-name>
			<local-home>org.jmws.entity.user.UserLocalHome</local-home>
			<local>org.jmws.entity.user.UserLocal</local>
			<ejb-class>org.jmws.entity.user.UserBean</ejb-class>
			<persistence-type>Container</persistence-type>
			<prim-key-class>java.lang.String</prim-key-class>
			<reentrant>false</reentrant>
			
			<cmp-version>2.x</cmp-version>
			<abstract-schema-name>User</abstract-schema-name>
			
			<cmp-field>
				<description>User's username (primary key)</description>
				<field-name>username</field-name>
			</cmp-field>
			<cmp-field>
				<description>User's id</description>
				<field-name>id</field-name>
			</cmp-field>
			<cmp-field>
				<description>Activation state</description>
				<field-name>userActive</field-name>
			</cmp-field>
			<cmp-field>
				<description>Password (crypted)</description>
				<field-name>password</field-name>
			</cmp-field>
			<cmp-field>
				<description>His date of registration</description>
				<field-name>registerDate</field-name>
			</cmp-field>
			<cmp-field>
				<description>User's full name</description>
				<field-name>fullName</field-name>
			</cmp-field>
			<cmp-field>
				<description>User's email</description>
				<field-name>email</field-name>
			</cmp-field>
			<cmp-field>
				<description>User's website homepage</description>
				<field-name>homepage</field-name>
			</cmp-field>
			<cmp-field>
				<description>User's biography</description>
				<field-name>biography</field-name>
			</cmp-field>
			<cmp-field>
				<description>Last time User logged in</description>
				<field-name>lastVisit</field-name>
			</cmp-field>
			<cmp-field>
				<description>Where User lives</description>
				<field-name>location</field-name>
			</cmp-field>
			<cmp-field>
				<description>What he does in real life</description>
				<field-name>occupation</field-name>
			</cmp-field>
			<cmp-field>
				<description>His ICQ number</description>
				<field-name>icqNumber</field-name>
			</cmp-field>
			<cmp-field>
				<description>His AIM address</description>
				<field-name>aimAddress</field-name>
			</cmp-field>
			<cmp-field>
				<description>His MSN address</description>
				<field-name>msnAddress</field-name>
			</cmp-field>
			<cmp-field>
				<description>His Yahoo address</description>
				<field-name>yahooAddress</field-name>
			</cmp-field>
			<cmp-field>
				<description>His signature</description>
				<field-name>signature</field-name>
			</cmp-field>
			<cmp-field>
				<description>His avatar</description>
				<field-name>avatar</field-name>
			</cmp-field>
			<cmp-field>
				<description>How much time must he stay logged in</description>
				<field-name>cookieTimeOut</field-name>
			</cmp-field>
			<cmp-field>
				<description>His selected language</description>
				<field-name>language</field-name>
			</cmp-field>			
						
			<primkey-field>username</primkey-field>
			
			<query>
				<description>Find Users by activity state</description>
				<query-method>
					<method-name>findByActive</method-name>
					<method-params>
						<method-param>java.lang.Boolean</method-param>
					</method-params>
				</query-method>
				<ejb-ql>SELECT OBJECT(u) FROM User u
							WHERE u.userActive = ?1					
				</ejb-ql>
			</query>			
			<query>
				<description>Find Users by a registration date</description>
				<query-method>
					<method-name>findByRegistrationDate</method-name>
					<method-params>
						<method-param>java.util.Date</method-param>
					</method-params>
				</query-method>
				<ejb-ql>SELECT OBJECT(u) FROM User u
							WHERE u.registerDate = ?1					
				</ejb-ql>
			</query>
			
		</entity>
		
		
		<entity>
		
			<display-name>PKGenerator EntityBean</display-name>
			<ejb-name>PKGenerator</ejb-name>
			<local-home>org.jmws.entity.pkgenerator.PKGeneratorLocalHome</local-home>
			<local>org.jmws.entity.pkgenerator.PKGeneratorLocal</local>
			<ejb-class>org.jmws.entity.pkgenerator.PKGeneratorBean</ejb-class>
			<persistence-type>Container</persistence-type>
			<prim-key-class>java.lang.String</prim-key-class>
			<reentrant>false</reentrant>
			
			<cmp-version>2.x</cmp-version>
			<abstract-schema-name>PKGenerator</abstract-schema-name>
			
			<cmp-field>
				<description>PKGenerator's primary key</description>
				<field-name>table</field-name>
			</cmp-field>
			<cmp-field>
				<description>Value of primary key</description>
				<field-name>key</field-name>
			</cmp-field>
			
			<primkey-field>table</primkey-field>
			
		</entity>
		
	</enterprise-beans>
	

</ejb-jar>
